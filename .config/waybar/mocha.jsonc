[{

  //****************
  // Bar Properties
  //****************

  "name": "topbar",
  "layer": "top",
  "position": "top",

  //****************
  // Define Modules
  //****************

  "modules-left": [
    "clock",
    "hyprland/workspaces"
  ],
  "modules-center": [
    "hyprland/window"
  ],
  "modules-right": [
    "custom/media",
    "mpd",
    "tray",
    "temperature",
    "pulseaudio",
    "network",
    "battery",
    "custom/notification",
    "custom/powermenu"
  ],

  //****************
  // Hyprland Components
  //****************

  "hyprland/window": {
    "max-length": 400,
    "separate-outputs": true,
    "format": "{}",
    "expand": true,
    "rewrite": {
      "^$": "(Ë¶áµ” áµ• áµ”Ë¶)"
    },
    "hide-empty-text": true
  },

  "hyprland/workspaces": {
    "format": "{icon}",
    "on-click": "activate",
    "on-scroll-up": "sleep 0.1 && hyprctl dispatch workspace e+1",
    "on-scroll-down": "sleep 0.1 && hyprctl dispatch workspace e-1",
    "active-only": true,
    "all-outputs": true,
    "format-icons": {
      "1": "ï„‘",
      "2": "ï„‘",
      "3": "ï„‘",
      "urgent": "ïª",
      "active": "ï†’",
      "default": "ï„‘",
      "special": "ï„Œ"
    },
    "persistent-workspaces": {
      "eDP-1": [1,2,3]
    },
    "sort-by-number": true,
    "show-special": true
  },

  //****************
  // PC Components
  //****************

  "battery": {
    "interval": 10,
    "states": {
      "warning": 20,
      "critical": 10
    },
    "format": "{icon} {capacity}%",
    "format-icons": [
      "ó°º",
      "ó°»",
      "ó°¼",
      "ó°½",
      "ó°¾",
      "ó°¿",
      "ó°‚€",
      "ó°‚",
      "ó°‚‚",
      "ó°¹"
    ],
    "format-full": "{icon} {capacity}%",
    "format-charging": "ó°‚„ {capacity}%",
    "tooltip": true
  },

  "cpu": {
    "interval": 1,
    "format": "ï’¼ {usage}%",
    "states": {
      "warning": 85
    }
  },

  "disk": {
    "interval": 30,
    "format": "ó°‹Š {percentage_used}%",
    "path": "/home",
    "tooltip": true,
    "tooltip-format": "{used}/{total} => {path} {percentage_used}%"
  },

  "memory": {
    "on-click": "kitty btop",
    "interval": 1,
    "format": "ï”¸ {percentage}%",
    "states": {
      "warning": 85
    }
  },

  "network": {
    "interval": 1,
    "format-wifi": "ï‡«",
    "format-ethernet": "ó°ˆ€",
    "format-linked": "ïƒ",
    "format-disconnected": "ó°ª",
    "tooltip": true,
    "tooltip-format": "{ifname} ({ipaddr})"
  },

  "temperature": {
    "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
    "critical-threshold": 70,
    "states": {
      "warning": 70,
      "critical": 80
    },
    "interval": 5,
    "format-critical": "!!ó°ˆ¸{temperatureC}Â°C!!",
    "format": "ï’¼ {temperatureC}Â°C",
    //"format": "TMP:{temperatureC}Â°C",
    "on-click": "sleep 0.1 && kitty btop"
  },

  //****************
  // Information Apps
  //****************

  "backlight": {
    "device": "intel_backlight",
    "on-scroll-up": "light -A 7",
    "on-scroll-down": "light -U 7",
    "format": "{icon} {percent}%",
    "format-icons": [
      "ï—",
      "ó°„‹",
      "ó°§‘",
      "ó°„Œ"
    ]
  },

  "clock": {
    "interval": 1,
    "format": "{:%H:%M %a %b %d}",
    "tooltip": true,
    "tooltip-format": "<big>{:%A, %d %B %Y}</big>\n<tt>{calendar}</tt>"
  },

  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ï‘",
      "deactivated": "ï“…"
    }
  },

  "mpd": {
    "max-length": 25,
    "format": "<span foreground='#bb9af7'>ó°š</span> {title}",
    "format-paused": "ó°š {title}",
    "format-stopped": "<span foreground='#bb9af7'>ó°š</span>",
    "format-disconnected": "",
    "on-click": "mpc --quiet toggle",
    "on-click-right": "mpc ls | mpc add",
    "on-click-middle": "kitty ncmpcpp",
    "on-scroll-up": "mpc --quiet prev",
    "on-scroll-down": "mpc --quiet next",
    "smooth-scrolling-threshold": 5,
    "tooltip-format": "{title} - {artist} ({elapsedTime:%M:%S}/{totalTime:%H:%M:%S})"
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "tooltip": false,
    "format-muted": "ó°Ÿ {volume}%",
    "on-click": "sleep 0.1 && ~/.config/waybar/scripts/audio_changer.py",
    "on-click-right": "sleep 0.1 && pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-click-middle": "sleep 0.1 && pavucontrol",
    "scroll-step": 5,
    "format-icons": {
      "headphone": "ó°‹‹",
      "hands-free": "ó°¥°",
      "headset": "ó°‹",
      "phone": "ó°²",
      "portable": "ó°²",
      "car": "ó°„‹",
      "default": ["ï€¦", "ï€§", "ó°•¾"]
    }
  },

  "tray": {
    "icon-size": 15,
    "spacing": 5
  },

  //****************
  // Custom Modules
  //****************

  "custom/cava-internal": {
    "exec": "~/.config/waybar/Cava.sh",
    "tooltip": false
  },

  "custom/launcher": {
    "format": "ï‰",
    "on-click": "~/.config/rofi/bin/launcher.sh",
    "tooltip-format": "pacman -Q linux",
    "tooltip": true
  },

  "custom/media": {
    "format": "{icon} {0}",
    "return-type": "json",
    "max-length": 25,
    "format-icons": {
      "spotify": "ï†¼",
      "default": "ğŸœ"
    },
    "escape": true,
    // "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
    "exec": "python3 $HOME/.config/waybar/scripts/mediaplayer.py --player spotify 2> /dev/null", // Filter player based on name
    "on-click": "sleep 0.1 && playerctl --player=spotify play-pause",
    "on-scroll-up": "sleep 0.1 && playerctl --player=spotify next",
    "on-scroll-down": "sleep 0.1 && playerctl --player=spotify previous"
  },

  "custom/notification": {
    "tooltip": false,
    "format": "{icon} {0}",
    "format-icons": {
      "notification": "ó°‚š",
      "none": "ó°‚œ",
      "dnd-notification": "ó°‚›",
      "dnd-none": "ó°ª‘",
      "inhibited-notification": "ó°‚š",
      "inhibited-none": "ó°‚œ",
      "dnd-inhibited-notification": "ó°‚›",
      "dnd-inhibited-none": "ó°ª‘"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "sleep 0.1 && swaync-client -t -sw",
    "on-click-right": "sleep 0.1 && swaync-client -d -sw",
    "escape": true
  },

  "custom/pacman": {
    "format": "ï‘ {}",
    "interval": 1800,
    "exec": "sleep 0.1 && checkupdates | wc -l",
    //"exec-if": "exit 0",
    "on-click": "sleep 0.1 && kitty yay",
    "signal": 8
  },

  "custom/powermenu": {
    "format": "ï€‘",
    "on-click": "sleep 0.1 && ~/.config/rofi/bin/powermenu.sh",
    "tooltip": false
  },

  "custom/reboot": {
    "format": "{}",
    "critical-threshold": 1,
    "states": {
        "critical": 1
    },
    "interval": 600,
    "exec": "sleep 0.1 && ~/.config/my-shared-config/check-reboot-required.sh",
    "return-type": "json"
  },

  "custom/recording": {
    "exec": "sleep 0.1 && $XDG_CONFIG_HOME/waybar/scripts/recording.sh status",
    "format": "{}",
    "on-click": "sleep 0.1 && $XDG_CONFIG_HOME/waybar/scripts/recording.sh toggle fullscreen",
    "on-click-right": "sleep 0.1 && $XDG_CONFIG_HOME/waybar/scripts/recording.sh toggle region",
    "restart-interval": 1,
    "return-type": "json",
    "tooltip": true
  },

  "custom/scratchpad-indicator": {
    "interval": 3,
    "return-type": "json",
    "exec": "swaymsg -t get_tree | jq --unbuffered --compact-output '(recurse(.nodes[]) | select(.name == \"__i3_scratch\") | .focus) as $scratch_ids | [..  | (.nodes? + .floating_nodes?) // empty | .[] | select(.id |IN($scratch_ids[]))] as $scratch_nodes | if ($scratch_nodes|length) > 0 then { text: \"\\($scratch_nodes | length)\", tooltip: $scratch_nodes | map(\"\\(.app_id // .window_properties.class) (\\(.id)): \\(.name)\") | join(\"\\n\") } else empty end'",
    "format": "ï‹’ {}",
    "on-click": "sleep 0.1 && exec swaymsg 'scratchpad show'",
    "on-click-right": "sleep 0.1 && exec swaymsg 'move scratchpad'"
  },

  "custom/weather": {
    "format": "{}",
    "tooltip": true,
    "interval": 900,
    "exec": "sleep 0.1 && ~/.config/waybar/scripts/wabar-wttr.py",
    "return-type": "json"
  }
}]

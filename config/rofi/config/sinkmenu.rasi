configuration {
  modi:                   "dmenu";
  show-icons:             true;
  drun-display-format:    "{name}";
  disable-history:        true;
  click-to-exit:          true;
  location:               3;
}

@import "font.rasi"
@import "colors.rasi"
@import "shared.rasi"

window {
  width:                  500px;
  anchor:                 north east;
  x-offset:               -5px;
  y-offset:               5px;
}

listview {
  fixed-height:           false;
  fixed-columns:          false;
}

mainbox {
  children:               [ listview ];
}

element-icon {
  size:                   0px;
}

element-text {
  font:                   @font10;
}
